{
  "info": {
    "name": "Backend Labs 6",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Ping",
      "request": {
        "method": "GET",
        "url": "{{api_base}}/api/ping"
      }
    },
    {
      "name": "List products",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "url": "{{api_base}}/api/products"
      }
    },
    {
      "name": "Create product",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{access_token}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\"name\":\"Phone\",\"price\":999}"
        },
        "url": "{{api_base}}/api/products"
      }
    }
  ],
  "variable": [
    {
      "key": "api_base",
      "value": "http://localhost:8000"
    },
    {
      "key": "access_token",
      "value": ""
    },
    {
      "key": "client_id",
      "value": "subscriber-app"
    },
    {
      "key": "client_secret",
      "value": "CHANGE_ME"
    }
  ]
}